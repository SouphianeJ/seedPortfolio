{
  "type": "VerticalLayout",
  "elements": [
    { "type": "Control", "scope": "#/properties/projectName" },
    {
      "type": "Group",
      "label": "Métadonnées",
      "elements": [
        { "type": "Control", "scope": "#/properties/year" },
        {
          "type": "Control",
          "scope": "#/properties/roles",
          "options": {
            "asyncOptions": {
              "url": "/api/jobpositions",
              "valuePath": "positionName",
              "labelPath": "positionName"
            }
          }
        },
        {
          "type": "Control",
          "scope": "#/properties/expertises",
          "options": {
            "asyncOptions": {
              "url": "/api/expertises",
              "valuePath": "_id",
              "labelPath": "expertiseName"
            }
          }
        }
      ]
    },
    { "type": "Control", "scope": "#/properties/thumbnailPic" },
    {
      "type": "Control",
      "scope": "#/properties/shortDescription",
      "options": { "multi": true }
    }
  ]
}
