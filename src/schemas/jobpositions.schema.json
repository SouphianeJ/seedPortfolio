{
  "$id": "JobPositionsSchema",
  "type": "object",
  "properties": {
    "positionName": { "type": "string", "title": "Intitulé du poste" },
    "thumbnailPic": { "type": "string", "title": "Vignette (URL)" },
    "subtitle": { "type": "string", "title": "Sous-titre" },
    "requiredSkills": {
      "type": "array",
      "title": "Compétences requises",
      "default": [],
      "items": {
        "type": "object",
        "properties": {
          "skillId": { "type": "string", "title": "Compétence (ObjectId)" },
          "minLevel": {
            "type": "integer",
            "title": "Niveau minimum",
            "minimum": 1,
            "maximum": 5
          },
          "priority": {
            "type": "integer",
            "title": "Priorité",
            "minimum": 1,
            "maximum": 5
          }
        },
        "required": ["skillId", "minLevel", "priority"],
        "default": { "skillId": "", "minLevel": 1, "priority": 3 }
      }
    },
    "projects": {
      "type": "array",
      "title": "Projets associés",
      "items": { "type": "string", "title": "Projet (ObjectId)", "default": "" },
      "uniqueItems": true,
      "default": []
    }
  },
  "required": ["positionName"]
}
