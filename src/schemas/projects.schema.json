{
  "$id": "ProjectsSchema",
  "type": "object",
  "properties": {
    "projectName": { "type": "string", "title": "Nom du projet" },
    "year": { "type": "integer", "title": "Année" },
    "roles": {
      "type": "array",
      "title": "Rôles",
      "items": { "type": "string" },
      "minItems": 1,
      "uniqueItems": true,
      "default": []
    },
    "expertises": {
      "type": "array",
      "title": "Expertises mobilisées",
      "items": { "type": "string" },
      "uniqueItems": true,
      "default": []
    },
    "tools": {
      "type": "array",
      "title": "Outils mobilisés",
      "items": { "type": "string" },
      "uniqueItems": true,
      "default": []
    },
    "isKeyProjet": { "type": "boolean", "title": "Projet clé", "default": false },
    "thumbnailPic": { "type": "string", "title": "Vignette (URL)" },
    "shortDescription": { "type": "string", "title": "Résumé" },
    "fireFacts": {
      "type": "array",
      "title": "Top Facts and Figures",
      "description": "Ajoutez des faits marquants et des chiffres clés pour illustrer les résultats du projet.",
      "items": { "type": "string", "title": "Fait marquant" },
      "uniqueItems": true,
      "default": []
    }
  },
  "required": ["projectName", "year", "roles"]
}
